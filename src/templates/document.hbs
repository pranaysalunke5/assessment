<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>{{title}}</title>
    <style>
      body { font-family: Arial, Helvetica, sans-serif; margin: 20px; }
      .header { text-align: center; margin-bottom: 20px; }
      .content { font-size: 14px; }
      .footer { margin-top: 30px; font-size: 12px; color: #555; }
    </style>
  </head>
  <body>
    <div class="header">
      <h1>{{title}}</h1>
    </div>

    <div class="content">
      {{#each this}}
        {{#if @key}}
          {{#unless (eq @key "title")}}
            <p><strong>{{@key}}:</strong> {{this}}</p>
          {{/unless}}
        {{/if}}
      {{/each}}
    </div>

    <div class="footer">
      <p>Generated on {{generatedAt}}</p>
    </div>
  </body>
</html>
